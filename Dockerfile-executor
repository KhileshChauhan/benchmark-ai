FROM continuumio/miniconda3 as base

RUN conda update -n base -c conda-forge conda

######################
# Infrequent changes #
######################
COPY ./executor/environment.yml /tmp/environment.yml

RUN conda env create -f /tmp/environment.yml -p /opt/executor

####################
# Frequent changes #
####################

COPY . /data/benchmark-ai
WORKDIR /data/benchmark-ai/executor

RUN /opt/executor/bin/pip install -r requirements.txt
RUN /opt/executor/bin/python3 setup.py install

########################################
# Build the final image
########################################
FROM ubuntu:18.04

COPY --from=base /opt/executor /opt/executor

# A workdir only for convenience
WORKDIR /opt/executor/bin

ENTRYPOINT [ "/bin/bash", "-c" ]

CMD [ "/opt/executor/bin/executor" ]
